<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Stocks" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Stocks</h1>
    <div class="flex space-x-4">
      <%= link_to "Back to products", admin_products_path, class: "rounded-lg py-3 px-5 bg-gray-600 text-white block font-medium" %>
      <%= link_to "New stock", new_admin_product_stock_path, class: "rounded-lg py-3 px-5 bg-pink-600 text-white block font-medium" %>
    </div>
  </div>

  <div class="relative overflow-x-auto shadow-md sm:rounded-lg mt-5">
  <table class="w-full text-sm text-left rtl:text-right text-gray-500 dark:text-gray-400">
    <thead class="text-xs uppercase bg-pink-100 text-pink-600 dark:bg-gray-700 dark:text-gray-400">
      <tr>
        <th scope="col" class="px-6 py-3">Size</th>
        <th scope="col" class="px-6 py-3">Amount</th>
        <th scope="col" class="px-6 py-3"></th>
      </tr>
    </thead>
    <tbody>
      <% @admin_stocks_out.each do |stock| %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= stock.size %>
          </td>
          <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <span class="text-red-600 bg-red-200 focus:outline-none focus:ring-4 focus:ring-red-300 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2">Out of stock</span>
          </td>
          <td class="px-6 py-4 text-right">
            <%= link_to "Edit", edit_admin_product_stock_path(stock.product,stock), class: "ml-2 rounded-lg py-3 px-5 bg-pink-200 text-pink-600 inline-block font-medium" %>
            <%= link_to "Show", [:admin, stock.product, stock], class: "ml-2 rounded-lg py-3 px-5 bg-pink-200 text-pink-600 inline-block font-medium" %>
          </td>
        </tr>
      <% end %>
      <% @admin_stocks.each do |stock| %>
        <tr class="bg-white border-b dark:bg-gray-800 dark:border-gray-700">
          <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= stock.size %>
          </td>
          <td class="px-6 py-4 font-medium text-gray-900 whitespace-nowrap dark:text-white">
            <%= stock.amount %>
          </td>
          <td class="px-6 py-4 text-right">
            <%= link_to "Edit", edit_admin_product_stock_path(stock.product,stock), class: "ml-2 rounded-lg py-3 px-5 bg-pink-200 text-pink-600 inline-block font-medium" %>
            <%= link_to "Show", [:admin, stock.product, stock], class: "ml-2 rounded-lg py-3 px-5 bg-pink-200 text-pink-600 inline-block font-medium" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

