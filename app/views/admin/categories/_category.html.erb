<div id="<%= dom_id category %>">
  <h1 class="font-bold text-3xl text-pink-700">Category #<%= category.id %></h1>
  <div class="flex text-pink-600 my-5">
    <p class="mr-5">
      <%= category.image.present? ? image_tag(category.image.variant(:thumb)) : image_tag("https://via.placeholder.com/50")%>
    </p>
  <p class="mr-5">
    <strong class="block font-semibold mb-1 text-pink-700">Name:</strong>
    <%= category.name %>
  </p>

  <p class="mr-5">
    <strong class="block font-semibold mb-1 text-pink-700">Description:</strong>
    <%= category.description %>
  </p>
  </div>
</div>
