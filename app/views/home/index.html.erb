
<div class="flex justify-between flex-wrap w-full items-center max-w-4xl">
    <h2 class="font-bold text-3xl text-pink-700 mb-5">Weekly Stats</h2>
    <div class="flex gap-10 flex-col md:flex-row justify-between w-full">
        <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-pink-400 to-pink-300">
            <div class="px-6 py-4">
                <div class="font-bold">Revenue</div>
                <p>
                    $<%= @month_stats[:revenue] ? (@month_stats[:revenue]/100.0).to_s : "0"%>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-pink-400 to-pink-300">
            <div class="px-6 py-4">
                <div class="font-bold">Total sales</div>
                <p>
                    <%= @month_stats[:sales] ? (@month_stats[:sales]).to_s : "0"%>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-pink-400 to-pink-300">
            <div class="px-6 py-4">
                <div class="font-bold">Average sale</div>
                <p>
                    $<%= @month_stats[:avg_sale] ? (@month_stats[:avg_sale]/100.0).to_s : "0"%>
                </p>
            </div>
        </div>
        <div class="max-w-sm rounded overflow-hidden shadow-xl bg-gradient-to-r from-pink-400 to-pink-300">
            <div class="px-6 py-4">
                <div class="font-bold">Items per sale</div>
                <p>
                    <%= @month_stats[:avg_items] ? (@month_stats[:avg_items]).to_s : "0"%>
                </p>
            </div>
        </div>
    </div>
    <%= line_chart @month_stats, colors: ["#ee68b3"], message: "Loading...", library: { backgroundColor: "transparent" }%>
</div>